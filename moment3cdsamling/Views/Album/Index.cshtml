@model IEnumerable<moment3cdsamling.Models.Album>

@{
    ViewData["Title"] = "Album";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Lägg till nytt album</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions">
        <p>
            Sök album <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Sök" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Tillbaka till hela listan</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AlbumId">Ändra</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AlbumId">Detaljer</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AlbumId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
