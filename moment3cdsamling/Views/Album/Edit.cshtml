@model moment3cdsamling.Models.Album

@{
    // Save title to ViewData
    ViewData["Title"] = "Ändra " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-12">
        <!-- Form to edit album -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId" />
            <div class="row">
                <div class="form-group col-12 col-md-4">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="Release" class="control-label fw-bold"></label>
                    <input asp-for="Release" class="form-control" />
                    <span asp-validation-for="Release" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="ArtistId" class="control-label fw-bold"></label>
                    <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
                    <span asp-validation-for="ArtistId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spara ändringar" class="btn btn-dark btn-sm" />
                <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
