@model moment3cdsamling.Models.Album

@{
    // Save title to ViewData
    ViewData["Title"] = "Radera " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<h2>Är du säker på att du vill radera albumet?</h2>
<div>
    <!-- Description list with details for album -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Release)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Release)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
    </dl>
    
    <!-- Form with submit button to delete album -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlbumId" />
        <input type="submit" value="Radera" class="btn btn-danger btn-sm" />
        <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
