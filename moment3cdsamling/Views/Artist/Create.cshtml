@model moment3cdsamling.Models.Artist

@{
    ViewData["Title"] = "Lägg till ny artist/grupp";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Information" class="control-label fw-bold"></label>
                <textarea asp-for="Information" class="form-control"></textarea>
                <span asp-validation-for="Information" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Tillbaka till listan</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
