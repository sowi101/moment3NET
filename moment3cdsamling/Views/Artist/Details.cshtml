@model moment3cdsamling.Models.Artist

@{
    // Save title to ViewData
    ViewData["Title"] = "Detaljer för " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <!-- Description list with details for artist -->
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Information)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark btn-sm" asp-action="Edit" asp-route-id="@Model?.ArtistId">Ändra</a>
    <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
</div>
