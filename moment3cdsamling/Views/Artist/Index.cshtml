@model IEnumerable<moment3cdsamling.Models.Artist>

@{
    ViewData["Title"] = "Artister";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary"  asp-action="Create">Lägg till ny artist/grupp</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Information)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Information)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ArtistId">Ändra</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ArtistId">Detaljer</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ArtistId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
