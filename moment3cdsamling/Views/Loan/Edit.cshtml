@model moment3cdsamling.Models.Loan

@{
    // Save title to ViewData
    ViewData["Title"] = "Ändra lån";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-12">
        <!-- Form to edit for loan of album -->
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-12 col-md-4">
                    <label asp-for="AlbumId" class="control-label fw-bold"></label>
                    <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
                    <span asp-validation-for="AlbumId" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="PersonId" class="control-label fw-bold"></label>
                    <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                    <span asp-validation-for="PersonId" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="BorrowedDate" class="control-label fw-bold"></label>
                    <input asp-for="BorrowedDate" class="form-control" />
                    <span asp-validation-for="BorrowedDate" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Spara ändringar" class="btn btn-dark btn-sm" />
                <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
