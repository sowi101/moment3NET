@model moment3cdsamling.Models.Person

@{
    // Save title to ViewData
    ViewData["Title"] = "Detaljer för " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <!-- Description list with details for contact -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark btn-sm" asp-action="Edit" asp-route-id="@Model?.PersonId">Ändra</a>
    <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
</div>
