@model IEnumerable<moment3cdsamling.Models.Person>

@{
    ViewData["Title"] = "Personer";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Lägg till ny person</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PersonId">Ändra</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PersonId">Detaljer</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PersonId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
