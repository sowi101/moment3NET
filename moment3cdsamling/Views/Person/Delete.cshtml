@model moment3cdsamling.Models.Person

@{
    // Save title to ViewData
    ViewData["Title"] = "Radera " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<h2>Är du säker på att du vill radera kontakten?</h2>
<div>
    <hr />
    <!-- Description list with details for contact -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <!-- Form with submit button to delete contact -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="PersonId" />
        <input type="submit" value="Radera" class="btn btn-danger btn-sm" />
        <a class="btn btn-dark btn-sm" asp-action="Index">Tillbaka till listan</a>
    </form>
</div>
